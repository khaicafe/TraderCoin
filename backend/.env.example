# Backend Environment Variables
PORT=8080
GIN_MODE=debug

# Database Configuration
# Options: "sqlite" or "postgresql"
DB_TYPE=sqlite

# SQLite Configuration (when DB_TYPE=sqlite)
DB_PATH=./tradercoin.db

# PostgreSQL Configuration (when DB_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=tradercoin
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=tradercoin_db
POSTGRES_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=24h

# Exchange APIs
BINANCE_API_URL=https://api.binance.com
BITTREX_API_URL=https://api.bittrex.com

# WebSocket
WS_PORT=8081

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
